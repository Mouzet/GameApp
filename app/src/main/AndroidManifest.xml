<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.gameapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Controller.DetailsActivity"
                   android:parentActivityName=".Controller.MainActivity"></activity>
        <activity android:name=".Controller.AboutActivity"
            android:parentActivityName=".Controller.MainActivity"></activity>
        <activity android:name=".Controller.GenreActivity"
            android:parentActivityName=".Controller.MainActivity"></activity>
        <activity android:name=".Controller.Add_ModifyActivity"
            android:parentActivityName=".Controller.MainActivity"></activity>
        <activity android:name=".Controller.CommentsActivity"
            android:parentActivityName=".Controller.MainActivity"/>
        <activity android:name=".Controller.GameActivity"
            android:parentActivityName=".Controller.MainActivity"></activity>
        <activity android:name=".Controller.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>