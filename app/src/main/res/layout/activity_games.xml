<?xml version="1.0" encoding="utf-8"?>
<!-- Servira de layout pour la page jeu-->
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginTop="8dp"
    android:background="@drawable/back"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="6dp"
        android:background="@color/list">

        <TextView
            android:id="@+id/id_game"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/buttonimage"
            android:layout_width="120dp"
            android:layout_height="52dp"
            android:layout_marginLeft="5dp"
            android:onClick="showGame" />

        <TextView
            android:id="@+id/name_game"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/buttonimage"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/name_game"
            android:layout_toRightOf="@id/buttonimage"
            android:textSize="12dp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/name_game"
            android:layout_marginLeft="6dp"/>

        <ImageView
            android:id="@+id/stars"
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:layout_toRightOf="@id/number"
            android:paddingLeft="2dp"
            android:textSize="15dp"
            android:src="@drawable/stars"
            />

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/stars"
            android:paddingLeft="12dp"

            android:textSize="15dp"
            android:textStyle="italic"
           />

        <TextView
            android:id="@+id/genre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/date"
            android:paddingLeft="12dp"/>

        <TextView
            android:id="@+id/pathimage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/buttonimage"
            android:layout_alignLeft="@+id/buttonimage"
            android:layout_marginStart="186dp"
            android:layout_marginLeft="186dp"
            android:text="/storage/emulated/0/DCIM/Camera/IMG_20190330_102504.jpg"
            android:visibility="invisible"
            />


    </RelativeLayout>





</android.support.v7.widget.CardView>