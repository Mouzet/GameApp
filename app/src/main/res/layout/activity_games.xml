<?xml version="1.0" encoding="utf-8"?>
<!-- Servira de layout pour la page jeu-->
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
   >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <ImageView
            android:id="@+id/image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/back"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="25dp" />


        <TextView
            android:id="@+id/name_game"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/image"
            android:layout_marginTop="25dp"
            android:hint="@string/name_game2"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/name_game"
            android:layout_toRightOf="@id/image"
            android:layout_marginTop="13dp"
            android:text="@string/description_game2"
            android:textSize="12dp"
            android:textStyle="italic" />

        <ImageView
            android:id="@+id/stars"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_toRightOf="@id/name_game"
            android:paddingLeft="12dp"
            android:layout_marginTop="25dp"
            android:src="@drawable/star4" />

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/stars"
            android:paddingLeft="12dp"
            android:layout_marginTop="25dp"
            android:textSize="15dp"
            android:textStyle="italic"
            android:text="@string/date2"/>

        <Button
            android:id="@+id/delete"
            android:layout_width="80dp"
            android:layout_height="35dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@id/date"
            android:layout_marginLeft="50dp"
            android:text="@string/delete"
            />

        <Button
            android:id="@+id/modify"
            android:layout_width="80dp"
            android:layout_height="35dp"
            android:layout_below="@id/delete"
            android:layout_toRightOf="@id/date"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="-6dp"
            android:text="@string/modify"
            android:onClick="modifyGame" />

    </RelativeLayout>

</android.support.v7.widget.CardView>