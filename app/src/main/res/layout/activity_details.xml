    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Details of a game, called when we click modify or click on a game-->

    <!--Title of the page-->
    <TextView
        android:id="@+id/details_page"
        android:layout_width="wrap_content"
