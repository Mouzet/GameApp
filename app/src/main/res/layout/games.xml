

<!-- Servira de layout pour la page jeu-->

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/back">

    <TextView
        android:id="@+id/games"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="159dp"
        android:layout_marginTop="23dp"
        android:text="@string/games"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="28dp"
        android:textStyle="bold"/>

    <ImageView
        android:id="@+id/game1"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:src="@drawable/pacman"
        android:layout_below="@+id/games"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="23dp"
        android:hint="@id/game1"/>

    <TextView
        android:id="@+id/name_game1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/games"
        android:layout_marginLeft="85dp"
        android:layout_marginTop="23dp"
        android:hint="@string/name_game1"/>

    <TextView
        android:id="@+id/description_game1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name_game1"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="85dp"
        android:hint="@string/description_game1"/>

</RelativeLayout>